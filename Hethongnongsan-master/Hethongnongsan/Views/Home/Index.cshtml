<!-- product section -->
<div class="product-section mt-150 mb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="section-title">
                    <h3><span class="orange-text">Our</span> Products</h3>
                    <p>Hãy tận hưởng hương vị tươi ngon và chất lượng cao từ những sản phẩm mới nhất trong danh mục của chúng tôi !</p>
                </div>
            </div>
        </div>
        @{
            int z = (Model.Count / 16) + 1;
            int c = 0;
        }

        <div class="row">
            @{if (@Model.Count > 0)
                {
                    for (int i = 1; i <= z; i++)
                    {
                        for (int k = c; k < i * 16; k++)
                        {
                            if (k == Model.Count)
                            {
                                break;
                            }
                            if (@ViewBag.idnguoidung != null)
                            {
                                <div class="col-lg-4 col-md-6 text-center">
                                    <div class="single-product-item">
                                        <div class="product-image">
                                            <a href="single-product.html"><img src="~/img/@Model[k].Linkhinhanh" alt="" style="height:243px;width:243px"></a>
                                        </div>
                                        <h3>@Model[k].Tensanpham</h3>
                                        <p class="product-price"><span>Per Kg</span> @Model[k].Gia VND</p>
                                        <a href="/Products/prod?idsp=@Model[k].Idsanpham" class="cart-btn"><i class="fas fa-shopping-cart"></i> Add to Cart</a>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="col-lg-4 col-md-6 text-center">
                                    <div class="single-product-item">
                                        <div class="product-image">
                                            <a href="single-product.html"><img src="~/img/@Model[k].Linkhinhanh" alt="" style="height:243px;width:243px"></a>
                                        </div>
                                        <h3>@Model[k].Idsanpham">@Model[k].Tensanpham</h3>
                                        <p class="product-price"><span>Per Kg</span> @Model[k].Gia VND</p>
                                        <a href="/Login/Index" class="cart-btn"><i class="fas fa-shopping-cart"></i> Add to Cart</a>
                                    </div>
                                </div>
                            }

                        }
                    }
                }
                else
                {
                    <h1> Khong con san pham nao</h1>
                }

            }
        </div>

    </div>
</div>
<!-- end product section -->
